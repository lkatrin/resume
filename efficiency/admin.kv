<AdminScreen>:
    FloatLayout:
        ScrollView:  # Прокрутка для всего содержимого
            size_hint: (1, 1)  # Прокрутка занимает весь экран
            do_scroll_x: False  # Отключаем горизонтальную прокрутку

            BoxLayout:  # Основной контейнер
                orientation: 'vertical'
                padding: 25
                spacing: 35
                size_hint_y: None  # Устанавливаем фиксированную высоту для прокрутки
                height: self.minimum_height  # Высота динамически изменяется в зависимости от содержимого

                # Заголовок панели
                BoxLayout:
                    size_hint_y: None
                    height: 150
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.6, 0.8, 1  # Цвет панели
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: "Панель администратора"
                        font_size: 36
                        color: 1, 1, 1, 1
                        bold: True

                # Кнопка "Управление сотрудниками"
                Button:
                    text: 'Управление сотрудниками'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'admin_employee_management'

                # Кнопка "Управление рейтингами"
                Button:
                    text: 'Управление рейтингами'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_color: 0.4, 0.7, 0.9, 1
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'admin_rating'

                # Кнопка "Просмотр статистики"
                Button:
                    text: 'Просмотр статистики'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_color: 0.4, 0.7, 0.9, 1
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'statistics'

                # Раздел управления сотрудниками
                Label:
                    text: 'Управление сотрудниками'
                    font_size: 30
                    size_hint_y: None
                    height: 50
                    color: 0.2, 0.6, 0.8, 1

                # Поля для добавления сотрудника
                TextInput:
                    id: employee_name
                    hint_text: 'Имя сотрудника'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_normal: ''
                    background_color: 0.95, 0.95, 0.95, 1
                    padding: 20, 20

                TextInput:
                    id: employee_position
                    hint_text: 'Должность'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_normal: ''
                    background_color: 0.95, 0.95, 0.95, 1
                    padding: 20, 20

                # Кнопка "Добавить сотрудника"
                Button:
                    text: 'Добавить сотрудника'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    on_press: root.add_employee()

                # Список сотрудников (если есть)
                ScrollView:
                    size_hint_y: None
                    halign: 'left'
                    height: 350
                    BoxLayout:
                        id: employee_list
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 20  # Увеличим расстояние между записями
                        padding: 20, 10  # Добавим внутренние отступы

                # Сообщение об ошибке (если есть)
                Label:
                    id: admin_error_label
                    text: ''
                    color: 1, 0, 0, 1
                    font_size: 28
                    size_hint_y: None
                    height: 40

                # Кнопка выхода
                Button:
                    text: 'Выйти'
                    size_hint_y: None
                    height: 130
                    font_size: 30
                    background_color: 0.8, 0.8, 0.8, 1
                    color: 0, 0, 0, 1
                    on_press: app.root.current = 'login'
